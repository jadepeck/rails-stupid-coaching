    <% @answers = ['Great!', 'Silly question, get dressed and go to work!', "I don't care, get dressed and go to work!"] %>
    <% if params[:ask_me] == 'I am going to work' %>
    <%=  @answers[0] %>
    <% elsif params[:ask_me].end_with?('?') %>
    <%=  @answers[1] %>
    <% else %>
    <%=  @answers[2] %>
    <% end %>
